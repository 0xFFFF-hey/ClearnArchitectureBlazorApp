@inject IViewInventoriesByNameUseCase ViewInventoriesByNameUseCase

<PageTitle>Inventories Page</PageTitle>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Quantity</th>
			<th>Price</th>
			<th></th>
			<th style="text-align:left"></th>
		</tr>
	</thead>
	<tbody>
		@if (inventories is not null && inventories.Count > 0)
		{
			foreach (var inv in inventories)
			{
				<InventoryListItemComponent @rendermode="InteractiveServer" Inventory="inv"></InventoryListItemComponent>
			}
		}
	</tbody>
</table>

@code {
	private List<Inventory>? inventories;

	[Parameter]
	public string? SearchProductFilter { get; set; }

	protected override async Task OnParametersSetAsync()
	{
		inventories = (await ViewInventoriesByNameUseCase.ExecuteAsync(SearchProductFilter ?? string.Empty)).ToList();
	}
}
